= simple_form_for([@specialty,@bodypart,@study], html: {class: 'form-horizontal'}) do |f|
  .panel.panel-primary
    .panel-heading
      h1 Nuevo estudio para la Anatom√≠a #{@bodypart.name}
      = content_for :action, 'Nuevo'
    .panel-body
      .container
        = f.error_notification
        = f.input :name, label: "Nombre"
    .panel-footer
      = f.button :submit, 'Crear estudio' ,class: 'btn btn-primary'
      span.pull-right
        .btn-group
          = link_to 'Volver a Estudios', specialty_bodypart_studies_path, class: "btn btn-default"
